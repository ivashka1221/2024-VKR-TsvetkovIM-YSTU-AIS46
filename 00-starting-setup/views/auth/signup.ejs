<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(errorMassage) { %>
            <div class="user-message user-message--error"> <%= errorMassage %> </div>
        <% } %>
        <form class="login-form" action="/signup" method="POST">
            <div class="form-control">
                <label for="firstName">Имя</label>
                <input 
                class="<%= validationErrors.find(e => e.path === `firstName`) ? `invalid`: `` %>"
                type="text" 
                name="firstName" 
                id="firstName" 
                value="<%= oldInput.firstName %>">
            </div>
            <div class="form-control">
                <label for="lastName">Фамилия</label>
                <input 
                class="<%= validationErrors.find(e => e.path === `lastName`) ? `invalid`: `` %>"
                type="text" 
                name="lastName" 
                id="lastName" 
                value="<%= oldInput.lastName %>">
            </div>
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input 
                class="<%= validationErrors.find(e => e.path === `email`) ? `invalid`: `` %>"
                type="email" 
                name="email" 
                id="email" 
                value="<%= oldInput.email %>">
            </div>
            <div class="form-control">
                <label for="role">Роль</label>
                <select 
                name="role" 
                id="role"
                >
                    <option value="Администратор">Администратор</option>
                    <option value="Мастер">Мастер</option>
                    <option value="Продавец">Продавец</option>
                </select>
            </div>
            <div class="form-control">
                <label for="password">Пароль</label>
                <input 
                class="<%= validationErrors.find(e => e.path === `password`) ? `invalid`: `` %>"
                type="password" 
                name="password" 
                id="password" 
                value="<%= oldInput.password %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Повторить пароль</label>
                <input 
                class="<%= validationErrors.find(e => e.path === `confirmPassword`) ? `invalid`: `` %>"
                type="password" 
                name="confirmPassword" 
                id="confirmPassword" 
                value="<%= oldInput.confirmPassword%>">
            </div>
            <button class="btn" type="submit">Зарегистрировать сотрудника</button>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </form>
    </main>
<%- include('../includes/end.ejs') %>