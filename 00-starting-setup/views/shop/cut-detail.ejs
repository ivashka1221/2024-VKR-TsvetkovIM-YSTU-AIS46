<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cut-detail.css">
<style id="svg-styles"></style>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.0/html2pdf.bundle.min.js"></script>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <input type="hidden" id="jsonMain" value="<%= JSON.stringify(main) %>">
    <input type="hidden" id="jsonCuts" value="<%= JSON.stringify(cuts) %>">
    <div id="materialMap"></div>
    <button class="btn" onclick="generatePDF()" style="display: block; margin: 0 auto;">Сохранить в PDF</button>
    <br>
    <form action="/create-order-brack" method="POST">
        <div class="form-control" style="margin: 0 auto;text-align: center;width: 200px; ">
            <label for="type">Ширина</label>
            <input type="number" id="width" name="width" required>
        </div>
        <div class="form-control" style="margin: 0 auto;text-align: center;width: 200px; ">
            <label for="type">Длина</label>
            <input type="number" id="height" name="height" required>
        </div>
        <div class="form-control" style="margin: 0 auto;text-align: center;width: 200px; ">
            <label for="type">Количетсов</label>
            <input type="number" id="quantity" name="quantity" required>
        </div>
        <div class="form-control" style="margin: 0 auto;text-align: center;width: 200px; ">
            <button type="submit" class="btn">Добавить брак!</button>
            <input type="hidden" name="orderMasterId" value="<%= orderMasterId %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </div>
    </form>
    
    <br>
    <br>
    <script src="/js/savePdf.js">
        
    </script>      
    <%- include('../includes/end.ejs') %>
    <script src="/js/cut-detail.js"></script>
    
    
