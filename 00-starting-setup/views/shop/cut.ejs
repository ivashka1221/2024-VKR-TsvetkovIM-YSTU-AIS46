<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/cut.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="cut-container">
        <h1 class="page-title">Раскрой</h1>
        <form class="cut-form" action="/cut" method="POST">
            <div class="cut-form-control">
                <label for="width">Ширина(мм):</label>
                <input type="number" id="width" name="width" step="0.01" required>
            </div>
            <div class="cut-form-control">
                <label for="height">Длина(мм):</label>
                <input type="number" id="height" name="height" step="0.01" required>
            </div>
            <input type="hidden" value="<%= orderMaster.id %>" name="orderMaster">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Создать раскрой</button>
        </form>   
        <% for (material of materials) { %>
            <div class="material">
                <h2>Ширина(мм): <%= material.width %></h2>
                <h2>Длина(мм): <%= material.height %></h2>
                <h2>Количество(шт): <%= material.quantity %></h2>
                <p>Комментарий: <%= material.description %></p>
            </div>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>
