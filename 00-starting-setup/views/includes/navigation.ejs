<div class="backdrop"></div>
<header class="main-header">
    <button id="side-menu-toggle">Menu</button>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <input type="hidden" id="isRole" value="<%= isRole %>">
            <input type="hidden" id="userId" value="<%= userId %>">
            <% if(isAuthenticated && isRole === `Администратор` || isRole === 'Продавец') { %>
            <li class="main-header__item">
                <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Мастерская</a>
            </li>
            <% } %>
            <% if(isAuthenticated) { %>
            <li class="main-header__item">
                <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Заказы</a>
            </li>
            <% } %>
            <% if(isAuthenticated && isRole === `Администратор` || isRole === 'Мастер') { %>
            <li class="main-header__item">
                <a class="<%= path === '/order-master' ? 'active' : '' %>" href="/order-master">Заказы на распил</a>
            </li>
            <% } %>
            <% if(isAuthenticated && isRole === `Администратор`) { %>
            <li class="main-header__item">
                <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Регистрация сотрудника</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/users' ? 'active' : '' %>" href="/users">Все сотрудники</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/stat' ? 'active' : '' %>" href="/statist">Статистика</a>
            </li>
            <% } %>
        </ul>
        <ul class="main-header__item-list"></ul>
            <% if(!isAuthenticated) { %>
            <ul class="main-header__item-list">
                <li class="main-header__item">
                    <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Вход </a>
                </li>
            </ul>
            <% } else { %>
            <ul class="main-header__item-list">
                <li class="main-header__item">
                    <form action="/logout" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit">Выход</button>
                    </form>
                </li>
            </ul>
            <% } %>
        </ul>
    </nav>
</header>

<nav class="mobile-nav">
        <ul class="mobile-nav__item-list">
                <li class="mobile-nav__item">
                    <a class="<%= path === '/' ? 'active' : '' %>" href="/">Shop</a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Products</a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">Add Product
                    </a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Admin Products
                    </a>
                </li>
            </ul>
</nav>